apiVersion: v1
kind: Secret
metadata:
  name: threat-intel-secrets
  namespace: threat-intel
type: Opaque
data:
  # Base64 encoded values - replace with actual values
  # To generate base64 encoded values:
  # echo -n "your_actual_password" | base64
  neo4j-password: <BASE64_ENCODED_NEO4J_PASSWORD>
  misp-api-key: <BASE64_ENCODED_MISP_API_KEY>
  otx-api-key: <BASE64_ENCODED_OTX_API_KEY>
  virustotal-api-key: <BASE64_ENCODED_VIRUSTOTAL_API_KEY>
  secret-key: <BASE64_ENCODED_SECRET_KEY>
